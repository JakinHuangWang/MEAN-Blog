<!DOCTYPE html>
<html>
  <head>
    <%- include header.ejs %>
    <title>Blog List</title>
  </head>
  <body>
    <div class="wrapper">
      <% if (start >= 5)  { %>
        <a href="/blog/<%- user %>?start=<%- start - 5 %>" class="waves-effect" id="previous_link"><i class="material-icons">chevron_left</i></a>
      <% } else { %>
        <a href="/blog/<%- user %>?start=<%- start - 5 %>" class="waves-effect disabled" id="previous_link"><i class="material-icons">chevron_left</i></a>
      <% } %>
      <div style="width: 100%;">
        <h3>Posts of <%= user %></h3>
        <% for(let i = start; i < start + 5 && i < data.length; i++) { %>
            <div class="row">
                <div class="col s12 m10 l8">
                    <div class="card teal-text lighten-3 hoverable">
                        <div class="card-content">
                          <span class="card-title">Post <%- data[i].postid %></span>
                          <div>Created: <%- (new Date(data[i].created)).toLocaleDateString() %></div>
                          <div>Modified: <%- (new Date(data[i].modified)).toLocaleDateString() %></div>
                        </div>
                        <div class="card-action">
                            <a href="/blog/<%- user %>/<%- data[i].postid %>">LINK</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
      </div>
      <% if (start + 5 < data.length)  { %>
        <a href="/blog/<%- user %>?start=<%- start + 5 %>" class="waves-effect" id="next_link"><i class="material-icons">chevron_right</i></a>
      <% } else { %>
        <a href="/blog/<%- user %>?start=<%- start + 5 %>" class="waves-effect disabled" id="next_link"><i class="material-icons">chevron_right</i></a>
      <% } %>
    </div>
    <%- include footer.ejs %>
  </body>
</html>