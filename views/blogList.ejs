<!DOCTYPE html>
<html>
  <head>
    <%- include header.ejs %>
    <title>Blog List</title>
  </head>
  <body>
    <h1>Posts of <%= user %></h1>
    <% for(let i = start; i < start + 5 && i < data.length; i++) { %>
        <div class="row">
            <div class="col s12 m6">
                <div class="card teal-text lighten-3">
                    <div class="card-content">
                      <span class="card-title">Post <%- data[i].postid %></span>
                      <span>Created: <%- (new Date(data[i].created)).toLocaleDateString() %></span>
                    </div>
                    <div class="card-action">
                        <a href="/blog/<%- data[i].username %>/<%- data[i].postid %>">LINK</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <%- include footer.ejs %>
  </body>
</html>