<!DOCTYPE html>
<html>
  <head>
    <%- include header.ejs %>
    <title>Login Form</title>
  </head>
  <body>
    <div class="row">
        <form method="POST" action="/login" class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Username" id="username" name="username" type="text" class="validate" required>
              <label for="username">Username</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Password" id="password" name="password" type="password" class="validate" required>
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="redirect" name="redirect" type="text" value="<%- redirect %>" class="validate" hidden>
            </div>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </form>
      </div>
    <%- include footer.ejs %>
  </body>
</html>